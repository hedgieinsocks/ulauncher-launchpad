{
    "api_version": "3",
    "name": "Launchpad",
    "authors": "hedgieinsocks",
    "icon": "utilities-terminal",
    "triggers": {
        "regular": {
            "keyword": "l",
            "name": "Launchpad",
            "description": "Search and launch scripts"
        }
    },
    "preferences": {
        "scripts_dir": {
            "type": "input",
            "name": "Scripts Directory",
            "description": "Path to the directory with the scripts",
            "default_value": ""
        },
        "highlight": {
            "type": "checkbox",
            "name": "Highlight Matches",
            "description": "Draw attension to the matched strings",
            "default_value": false
        },
        "compact": {
            "type": "checkbox",
            "name": "Compact Mode",
            "description": "Enable condensed view",
            "default_value": false
        }
    }
}
