{
    "api_version": "3",
    "name": "Launchpad",
    "authors": "hedgieinsocks",
    "icon": "utilities-terminal",
    "triggers": {
        "regular": {
            "keyword": "l",
            "name": "Literal Search",
            "description": "Look for exact matches"
        },
        "fuzzy": {
            "keyword": "lf",
            "name": "Fuzzy Search",
            "description": "Look for fuzzy matches"
        }
    },
    "preferences": {
        "scripts_dir": {
            "type": "input",
            "name": "Scripts Directory",
            "description": "Path to the directory with the scripts",
            "default_value": ""
        },
        "highlight": {
            "type": "checkbox",
            "name": "Highlight Matches",
            "description": "Draw attension to the matched strings",
            "default_value": false
        },
        "compact": {
            "type": "checkbox",
            "name": "Compact Mode",
            "description": "Enable condensed view",
            "default_value": false
        },
        "threshold": {
            "type": "number",
            "name": "Fuzzy Threshold",
            "description": "Discard the items below this score",
            "default_value": 40,
            "min": 0,
            "max": 99
        }
    }
}
